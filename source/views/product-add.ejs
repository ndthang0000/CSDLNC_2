<!DOCTYPE html>

<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>
    <%- include('./partials/loader'); -%>
    <div id="main-wrapper">
        <%- include('./partials/header-sidebar'); -%>
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Thêm sản phẩm</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <div class="col-xl-6">
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-skill">Loại sản phẩm
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <select class="form-control" id="val-skill" name="category">
                                                            <option value="">---Chọn loại sản phẩm---</option>
                                                            <% category.forEach(item=>{ %>
                                                                <option value="<%= item.MALOAI %>"><%= item.TENLOAI %></option>
                                                            <% }) %>                                 
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-currency">Mã sản phẩm
                                                        <span class="text-danger">*10 kí tự</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" id="val-currency" name="masp" placeholder="Mã sản phẩm ... " value="<%=masp%>">
                                                        <span style="color: red;"><%=message%></span>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-currency">Tên sản phẩm
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" id="val-currency" name="name" placeholder="Tên sản phẩm ... ">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-currency">Giá bán
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" id="val-currency" name="price" placeholder="...VNĐ">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-website">Tên thương hiệu
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" id="val-website" name="vendor" placeholder="Nhà sản xuất...">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-website">Số lượng hiện có
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <input type="text" class="form-control" id="val-website" name="quantity" placeholder="Số lượng hiện có...">
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-lg-4 col-form-label" for="val-phoneus">Mô tả
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-6">
                                                        <textarea style="width: 100%;padding: 5px 10px;" name="des" id="" cols="30" rows="10" placeholder="Mô tả..."></textarea>
                                                    </div>
                                                </div>
                                                
                                                <div class="form-group row">
                                                    <div class="col-lg-8 ml-auto">
                                                        <button type="submit" class="btn btn-primary">Đăng sản phẩm</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-6">
                                                <h3>Ảnh Sản phẩm</h3>
                                                <div style="width: 200px;position: relative;margin-top: 20px;">
                                                    <img src="/images/upanh.png" style="width: 100%;" alt="">
                                                    <input type="file" name="image" id="" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;opacity: 0;" required>
                                                    
                                                </div>
                                                <div id="div-preview" style="width: 300px; border: 5px dashed blue;margin-top: 50px;height: 200px;display: flex;align-items: center;">
                                                    <img style="width: 100%;" id="preview-img" src="" alt="">

                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    
    
    </div>
    
    <%- include('./partials/script'); -%>
    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            const imgEl=document.querySelector('#preview-img')
            const fileEl=document.querySelector('input[type="file"]')
            let urlImg;
            fileEl.addEventListener('change',(e)=>{
                if(urlImg){
                    URL.revokeObjectURL(urlImg)
                }
                console.log(e.target.files[0])
                urlImg=URL.createObjectURL(e.target.files[0])
                imgEl.src=urlImg
            })
        })
    </script>
</body>

</html>