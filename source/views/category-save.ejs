<!DOCTYPE html>

<html lang="en">

<head>
    <%- include('./partials/head'); -%>

</head>

<body>

    <%- include('./partials/loader'); -%>
    <div id="main-wrapper">
        <%- include('./partials/header-sidebar'); -%>
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <form action="" method="post" style="background-color: #fff;margin: 20px;padding: 20px;width: 500px;-webkit-box-shadow: -2px 1px 20px 0px rgba(0,0,0,0.1); 
                    box-shadow: -2px 1px 20px 0px rgba(0,0,0,0.1);">
                        <h3 class="text-center">Thêm danh mục</h3>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-currency" style="color: #555;">Mã Loại
                                <span class="text-danger">*10 kí tự</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-currency" name="maloai" placeholder="Mã loại ... " value="<%=maloai%>">
                                <span style="color: <% if(!success){ %>
                                        red
                                        <% }else{ %>
                                            #28a745
                                        <% } %>
                                    ;"><%= message %></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label" for="val-currency" style="color: #555;">Tên sản phẩm
                                <span class="text-danger">*</span>
                            </label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="val-currency" name="name" placeholder="Tên danh mục ... " value="<%= name %>" >
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm danh mục</button>
                    </form>
                    
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Tất cả danh mục sản phẩm</h4>
                            </div>
                            <div class="card-body">
                                <div class="basic-list-group">
                                    <div class="row">
                                        <div class="col-lg-6 col-xl-2">
                                            <div class="list-group mb-4 " id="list-tab" role="tablist">
                                                <% for(let i=0;i<category.length;i++) { %>
                                                    <a class="list-group-item list-group-item-action 
                                                    <% if (i==0){ %>
                                                        active
                                                    <% } %>
                                                    " id="list-<%= category[i].MALOAI.trim() %>" data-toggle="list" href="#<%= category[i].MALOAI.trim() %>" role="tab"><%= category[i].TENLOAI %></a>
                                                <% } %>
                                                
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-xl-10">
                                            <div class="tab-content" id="nav-tabContent">
                                                <% for(let i=0;i<category.length;i++) { %>
                                                    <div class="tab-pane fade show 
                                                    <% if (i==0){ %>
                                                        active
                                                    <% } %>" id="<%= category[i].MALOAI.trim() %>">
                                                        <h4 class="mb-4"><%= category[i].TENLOAI %></h4>
                                                        <p style="color: red;">Mã Loại : <%= category[i].MALOAI %></p>
                                                        <p style="color: #555;">Tổng số sản phẩm : <%= formatNumber(category[i].SOLUONG) %></p>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    
    
    </div>
    
    <%- include('./partials/script'); -%>
</body>

</html>